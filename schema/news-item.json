{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "psa/news-item.json",
    "description": "News post in What's On",
    "type": "object",
    "properties": {
        "slug": {
            "$ref": "definitions/slug.json"
        },
        "title": {
            "type": "string"
        },
        "newsType": {
            "$ref": "definitions/tag.json"
        },
        "tags": {
            "$ref": "definitions/tags.json"
        },
        "date": {
            "type": "string",
            "format": "date-time"
        },
        "blocks": {
            "$ref": "definitions/blocks.json"
        }
    },
    "required": [
        "slug",
        "title",
        "newsType",
        "tags",
        "date",
        "blocks"
    ]
}