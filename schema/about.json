{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "psa/product.json",
    "description": "Product in A Power Store",
    "type": "object",
    "properties": {
        "slug": { "$ref": "definitions/slug.json" },
        "title": { "type": "string" },
        "image": { "$ref": "definitions/image.json" },
        "blocks": { "$ref": "definitions/blocks.json" },
        "history": {
            "type": "array",
            "items": { "$ref": "definitions/image.json" }
        }
    },
    "required": [ "slug", "title", "image", "blocks", "history" ],
    "additionalProperties": false
  }