{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "psa/definitions/artwork-thumbnail.json",
    "type": "object",
    "required": [
        "type",
        "title",
        "slug",
        "artworkType",
        "image",
        "artist",
        "date"
    ],
    "properties": {
        "type": {
            "const": "artwork"
        },
        "title": {
            "type": "string"
        },
        "slug": {
            "$ref": "./slug.json"
        },
        "artworkType": {
            "$ref": "./tag.json"
        },
        "image": {
            "$ref": "./image.json"
        },
        "artist": {
            "type": "string"
        },
        "date": {
            "type": "string"
        }
    }
}