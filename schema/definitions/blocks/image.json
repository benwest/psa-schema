{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "psa/definitions/blocks/image.json",
    "type": "object",
    "required": [
        "type",
        "image",
        "size"
    ],
    "properties": {
        "type": {
            "const": "image"
        },
        "title": {
            "type": "string"
        },
        "image": {
            "$ref": "../image.json"
        },
        "size": {
            "type": "string",
            "enum": [
                "medium",
                "large"
            ]
        }
    }
}