{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "psa/definitions/blocks/products.json",
    "type": "object",
    "required": [
        "type",
        "title",
        "products"
    ],
    "properties": {
        "type": {
            "const": "products"
        },
        "title": {
            "type": "string"
        },
        "products": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "../product-thumbnail.json"
            }
        }
    }
}