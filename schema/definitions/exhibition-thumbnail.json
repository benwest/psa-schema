{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "psa/definitions/exhibition-thumbnail.json",
    "type": "object",
    "required": [
        "type",
        "title",
        "slug",
        "image",
        "startDate",
        "endDate"
    ],
    "properties": {
        "type": {
            "const": "exhibition"
        },
        "title": {
            "type": "string"
        },
        "slug": {
            "$ref": "./slug.json"
        },
        "image": {
            "$ref": "./image.json"
        },
        "startDate": {
            "type": "string",
            "format": "date-time"
        },
        "endDate": {
            "type": "string",
            "format": "date-time"
        }
    }
}