{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "psa/definitions/image.json",
    "type": "object",
    "properties": {
        "ratio": {
            "type": "number",
            "description": "height / width"
        },
        "placeholder": {
            "type": "string",
            "format": "uri",
            "description": "small, blurry version of the image"
        },
        "srcs": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "width": {
                        "type": "number"
                    },
                    "height": {
                        "type": "number"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "required": [
                    "width",
                    "height",
                    "url"
                ]
            }
        },
        "caption": {
            "type": "string"
        },
        "alt": {
            "type": "string"
        }
    },
    "required": [
        "ratio",
        "placeholder",
        "srcs"
    ],
    "additionalProperties": false
}