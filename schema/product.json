{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "psa/product.json",
    "description": "Product in A Power Store",
    "type": "object",
    "properties": {
        "slug": { "$ref": "definitions/slug.json" },
        "title": { "type": "string" },
        "images": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "definitions/image.json" }
        },
        "publicationPages": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "definitions/image.json" }
        },
        "details": { "$ref": "definitions/details.json" },
        "blocks": { "$ref": "definitions/blocks.json" }
    },
    "required": [ "slug", "title", "images", "details", "blocks" ],
    "additionalProperties": false
  }