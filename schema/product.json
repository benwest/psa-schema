{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "psa/product.json",
    "description": "Product in A Power Store",
    "type": "object",
    "properties": {
        "slug": {
            "$ref": "definitions/slug.json"
        },
        "title": {
            "type": "string"
        },
        "productType": {
            "$ref": "definitions/tag.json"
        },
        "tags": {
            "$ref": "definitions/tags.json"
        },
        "price": {
            "type": "number"
        },
        "buy": {
            "$ref": "definitions/link.json"
        },
        "images": {
            "type": "array",
            "items": {
                "$ref": "definitions/image.json"
            }
        },
        "publicationPages": {
            "type": "array",
            "items": {
                "$ref": "definitions/image.json"
            }
        },
        "details": {
            "$ref": "definitions/details.json"
        },
        "blocks": {
            "$ref": "definitions/blocks.json"
        }
    },
    "required": [
        "slug",
        "title",
        "productType",
        "tags",
        "images",
        "publicationPages",
        "details",
        "blocks"
    ]
}